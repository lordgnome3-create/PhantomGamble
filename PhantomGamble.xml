<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Script file="PhantomGamble.lua"/>

	<!-- Event Handler Frame -->
	<Frame name="PhantomGamble_EventFrame" hidden="true">
		<Scripts>
			<OnLoad>
				PhantomGamble_OnLoad();
			</OnLoad>
			<OnEvent>
				PhantomGamble_OnEvent(event);
			</OnEvent>
		</Scripts>
	</Frame>

	<Frame name="PhantomGamble_Frame" toplevel="true" movable="true" enableMouse="true" hidden="false" parent="UIParent">
		<Size>
			<AbsDimension x="300" y="200"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="PhantomGamble_Title" inherits="GameFontNormal" text="PhantomGamble">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<!-- Edit Box for Roll Number -->
			<EditBox name="PhantomGamble_EditBox" letters="5" autoFocus="false">
				<Size>
					<AbsDimension x="100" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="PhantomGamble_EditBox_Left" file="Interface\Common\Common-Input-Border">
							<Size>
								<AbsDimension x="8" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="-5" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.0625" top="0" bottom="1.0"/>
						</Texture>
						<Texture name="PhantomGamble_EditBox_Right" file="Interface\Common\Common-Input-Border">
							<Size>
								<AbsDimension x="8" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.9375" right="1.0" top="0" bottom="1.0"/>
						</Texture>
						<Texture name="PhantomGamble_EditBox_Middle" file="Interface\Common\Common-Input-Border">
							<Anchors>
								<Anchor point="LEFT" relativeTo="PhantomGamble_EditBox_Left" relativePoint="RIGHT"/>
								<Anchor point="RIGHT" relativeTo="PhantomGamble_EditBox_Right" relativePoint="LEFT"/>
							</Anchors>
							<TexCoords left="0.0625" right="0.9375" top="0" bottom="1.0"/>
						</Texture>
					</Layer>
				</Layers>
				<FontString inherits="ChatFontNormal"/>
				<Scripts>
					<OnLoad>
						PhantomGamble_EditBox_OnLoad();
					</OnLoad>
					<OnEscapePressed>
						this:ClearFocus();
					</OnEscapePressed>
				</Scripts>
			</EditBox>

			<!-- Open Entry / Accept Ones Button -->
			<Button name="PhantomGamble_AcceptOnes_Button" inherits="GameMenuButtonTemplate" text="Open Entry">
				<Size>
					<AbsDimension x="120" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-80"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_OnClickACCEPTONES();
					</OnClick>
				</Scripts>
			</Button>

			<!-- Last Call Button -->
			<Button name="PhantomGamble_LASTCALL_Button" inherits="GameMenuButtonTemplate" text="Last Call">
				<Size>
					<AbsDimension x="120" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="PhantomGamble_AcceptOnes_Button" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_OnClickLASTCALL();
					</OnClick>
				</Scripts>
			</Button>

			<!-- Roll Button -->
			<Button name="PhantomGamble_ROLL_Button" inherits="GameMenuButtonTemplate" text="Roll">
				<Size>
					<AbsDimension x="120" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="PhantomGamble_LASTCALL_Button" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_OnClickROLL();
					</OnClick>
				</Scripts>
			</Button>

			<!-- Chat Method Button -->
			<Button name="PhantomGamble_CHAT_Button" inherits="GameMenuButtonTemplate" text="RAID">
				<Size>
					<AbsDimension x="80" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="20" y="15"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_OnClickCHAT();
					</OnClick>
				</Scripts>
			</Button>

			<!-- Whisper Button -->
			<Button name="PhantomGamble_WHISPER_Button" inherits="GameMenuButtonTemplate" text="(No Whispers)">
				<Size>
					<AbsDimension x="100" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-20" y="15"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_OnClickWHISPERS();
					</OnClick>
				</Scripts>
			</Button>

			<!-- Close Button -->
			<Button name="PhantomGamble_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PhantomGamble_SlashCmd("hide");
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				PhantomGamble_OnLoad();
			</OnLoad>
			<OnEvent>
				PhantomGamble_OnEvent(event);
			</OnEvent>
			<OnMouseDown>
				this:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing();
			</OnMouseUp>
		</Scripts>
	</Frame>

	<!-- Minimap Button -->
	<Button name="PG_MinimapButton" movable="true" enableMouse="true" parent="Minimap">
		<Size>
			<AbsDimension x="32" y="32"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="PG_MinimapButton_Icon" file="Interface\Icons\INV_Misc_Coin_01">
					<Size>
						<AbsDimension x="20" y="20"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="1"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="PG_MinimapButton_Border" file="Interface\Minimap\MiniMap-TrackingBorder">
					<Size>
						<AbsDimension x="52" y="52"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				PG_MinimapButton_Reposition();
			</OnLoad>
			<OnClick>
				PG_MinimapButton_OnClick();
			</OnClick>
			<OnDragStart>
				this:StartMoving();
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
			<OnEnter>
				GameTooltip:SetOwner(this, "ANCHOR_LEFT");
				GameTooltip:SetText("PhantomGamble");
				GameTooltip:AddLine("Click to toggle window", 1, 1, 1);
				GameTooltip:AddLine("Drag to move", 1, 1, 1);
				GameTooltip:Show();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<HighlightTexture file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight" alphaMode="ADD"/>
	</Button>

	<!-- Dragging Frame for Minimap Button -->
	<Frame name="PG_MinimapButton_DraggingFrame" hidden="true" parent="PG_MinimapButton">
		<Scripts>
			<OnUpdate>
				PG_MinimapButton_DraggingFrame_OnUpdate();
			</OnUpdate>
		</Scripts>
	</Frame>

</Ui>
